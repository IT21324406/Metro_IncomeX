<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circle_white_top"
    android:backgroundTint="#0DC85A"
    tools:context=".notifications">

    <TextView
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/notification"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notific2"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:drawableTint="@color/black"
        android:paddingTop="10dp"
        android:text="Savings today"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/notific3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notific1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/notific1"
        android:layout_width="340dp"
        android:layout_height="59dp"
        android:layout_marginTop="44dp"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:drawableTint="@color/black"
        android:outlineAmbientShadowColor="@color/green1"
        android:paddingTop="10dp"
        android:text="Rent is due tomorrow"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification" />

    <TextView
        android:id="@+id/notific3"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:layout_marginTop="25dp"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:drawableTint="@color/black"
        android:paddingTop="10dp"
        android:text="Semester fee is due"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/notific4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notific2" />

    <TextView
        android:id="@+id/notific4"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:drawableTint="@color/black"
        android:paddingTop="10dp"
        android:text="Update your wallet log"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/notific5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notific3"
        app:layout_constraintVertical_bias="0.545" />

    <TextView
        android:id="@+id/notific5"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:drawableTint="@color/black"
        android:paddingTop="10dp"
        android:text="Software update"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/notific6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notific4" />

    <TextView
        android:id="@+id/notific6"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="79dp"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:drawableTint="@color/black"
        android:paddingTop="10dp"
        android:text="Confirm income "
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notific5" />

    <Button
        android:id="@+id/btn_back8"
        android:layout_width="107dp"
        android:layout_height="50dp"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notific6"
        app:layout_constraintVertical_bias="0.543" />

</androidx.constraintlayout.widget.ConstraintLayout>