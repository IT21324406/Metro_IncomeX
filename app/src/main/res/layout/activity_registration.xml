<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration"
    android:background="@drawable/circle_white"
    android:backgroundTint="@color/green">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-333dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp"
                android:layout_marginBottom="31dp"
                android:text="Registration Form"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                app:layout_constraintBottom_toTopOf="@+id/edtName"
                app:layout_constraintEnd_toEndOf="@+id/edtName"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="360dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:hint=" Full Name"
                android:inputType="textPersonName"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/edtPhone"
                app:layout_constraintEnd_toEndOf="@+id/edtPhone"
                app:layout_constraintStart_toStartOf="@+id/edtPhone"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="360dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:hint=" Contact Number"
                android:inputType="textPersonName"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/edtAddress"
                app:layout_constraintEnd_toEndOf="@+id/edtAddress"
                app:layout_constraintStart_toStartOf="@+id/edtAddress"
                app:layout_constraintTop_toBottomOf="@+id/edtName" />

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="360dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:hint=" Address"
                android:inputType="textPersonName"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/edtOccupation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtPhone" />

            <EditText
                android:id="@+id/edtOccupation"
                android:layout_width="360dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:hint=" Occupation"
                android:inputType="textPersonName"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/textView10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtAddress" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="360dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:text="Are you using IncomeX for:"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/cbTransport"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtOccupation" />

            <CheckBox
                android:id="@+id/cbTransport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Myself"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/cbFam"
                app:layout_constraintEnd_toEndOf="@+id/cbFam"
                app:layout_constraintStart_toStartOf="@+id/cbFam"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <CheckBox
                android:id="@+id/cbFam"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="16dp"
                android:text="Family"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/edtUsername"
                app:layout_constraintStart_toStartOf="@+id/edtUsername"
                app:layout_constraintTop_toBottomOf="@+id/cbTransport" />

            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="360dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:hint=" Enter Username"
                android:inputType="textPersonName"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/edtPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cbFam" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="360dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:hint=" Enter Password"
                android:inputType="textPersonName"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/textView11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtUsername" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="392dp"
                android:layout_height="110dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="16dp"
                android:text="Choose one of the below questions and enter your own answer. Do not lose the selected question and the answer you entered as it will be used to verify when you want to change the password"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/textView12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtPassword" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="16dp"
                android:text="Select Question"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/spQuestion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <Spinner
                android:id="@+id/spQuestion"
                android:layout_width="360dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="16dp"
                android:entries="@array/questions"
                app:layout_constraintBottom_toTopOf="@+id/edtAnswer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <EditText
                android:id="@+id/edtAnswer"
                android:layout_width="360dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:hint=" Enter Answer"
                android:inputType="textPersonName"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spQuestion" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="69dp"
                android:layout_marginEnd="16dp"
                android:width="100dp"
                android:backgroundTint="@color/green"
                android:text="SAVE"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnBack"
                app:layout_constraintTop_toBottomOf="@+id/edtAnswer" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="69dp"
                android:backgroundTint="@color/red"
                android:text="BACK"
                android:textSize="18dp"
                app:layout_constraintEnd_toStartOf="@+id/btnSave"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtAnswer" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>